<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textMusicName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/color5"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:text="@tools:sample/full_names" />

    <TextView
        android:id="@+id/textArtistName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/color5"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:text="@tools:sample/full_names" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/buttonPrev"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_prev"
            android:contentDescription="@string/prew_music" />

        <ImageView
            android:id="@+id/buttonManage"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:src="@drawable/ic_play"
            android:contentDescription="@string/music_pause" />

        <ImageView
            android:id="@+id/buttonNext"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:rotation="180"
            android:src="@drawable/ic_prev"
            android:contentDescription="@string/next_music" />

        <ImageView
            android:id="@+id/buttonCancel"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="12dp"
            android:padding="4dp"
            android:src="@drawable/ic_close"
            android:contentDescription="@string/music_stop" />
    </LinearLayout>

</LinearLayout>